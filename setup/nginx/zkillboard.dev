# IP which nodejs is running on
upstream zkilljs_www {
	server 127.0.0.1:3000;
}

upstream zkilljs_websocket {
	server 127.0.0.1:18888;
}

proxy_cache_path /tmp/nginxproxy/ levels=1:2 keys_zone=zkilljs:10m max_size=10g inactive=62m use_temp_path=off;
proxy_cache zkilljs;
proxy_cache_use_stale error timeout updating http_500 http_502 http_503 http_504;
proxy_cache_lock on;
proxy_cache_lock_timeout 31s;
proxy_cache_min_uses 1;

add_header X-Cache-Status $upstream_cache_status;

proxy_cache_revalidate on;
proxy_ignore_headers "Cache-Control" "Expires" "X-Accel-Expires" "Set-Cookie";
proxy_hide_header "Set-Cookie";

proxy_set_header        X-Real-IP       $remote_addr;
proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;


# nginx server instance
server {
	server_name zkillboard.dev;
	server_name	145.239.253.208;
	listen 443 ssl;
	listen [::]:443 ssl;
	include snippets/self-signed.conf;
	include snippets/ssl-params.conf;

	location /websocket/ {
		proxy_http_version 1.1;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection "Upgrade";
		proxy_set_header Host $host;
		proxy_pass http://zkilljs_websocket;
	}

	location ~ (^/cache/1day|^/favicon.ico$) {
		proxy_cache_lock on;
		proxy_set_header zkilljsproxy true;
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_cache_valid 200 1d;
		expires 1d;
		proxy_pass http://zkilljs_www;
	}

	location /cache/1hour {
		proxy_cache_lock on;
		proxy_set_header zkilljsproxy true;
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_cache_valid 200 60m;
		expires 60m;
		proxy_pass http://zkilljs_www;
	}

	location / {
		root /var/www/zkilljs/public;
		index index.html;
		try_files $uri $uri/ @node;
	}

	location @node {
		proxy_set_header Host $http_host;
		proxy_set_header X-Forwarded-For $remote_addr;
		proxy_pass http://zkilljs_www;
	}
}
